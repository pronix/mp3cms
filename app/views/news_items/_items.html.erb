<ul class="all-news">
  <% for item in items %>
  <li class="<%= !@first ? 'first': (@first = true && '') %>">
    <dl>
      <dd class="photo small-corners">
	      <span class="corn-top"><span></span></span>
				<span class="photo">
          <a href="#"><%= image_tag "news-noimage.png" %></a>
        </span>
				<span class="corn-bot"><span></span></span>
      </dd>
      <dd><a href="#" class="title"><%= item.header %></a></dd>
      <dd><%=h item.text %></dd>
			<dd class="red autor">
        <p class="date"><%= item.created_at.to_s %></p> <p class="comments">(<%= item.comments %>)</p>
        <p class="autor"></p>
      </dd>
      <dd class="more">
        <%= link_to I18n.t("views.news.read_more"), news_item_path(item) %>
      </dd>
    </dl>
  </li>
  <% end %>
</ul>
