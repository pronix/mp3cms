%li
  %dl
    - if block_news.avatar?
      %dd.photo.small-corners
        %span.corn-top
          %span
        %span.photo
          = link_to(image_tag(block_news.avatar.url(:original)), news_item_url(:id => block_news.id))
        %span.corn-bot
          %span
    %dd.title= link_to block_news.header, news_item_url(:id => block_news.id), :class => "title"
    %dd= block_news.text
    %dd.red.autor
      %p.date= block_news.created_at
      %p.comments= block_news.comments.size
      %p.autor= block_news.user.login
    %dd.more= link_to 'читать дальше...', news_item_url(:id => block_news.id)
