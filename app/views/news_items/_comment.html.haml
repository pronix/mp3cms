%tr
  %td.autor
    %a{:href => "#"}= comment.user.login
    %p= comment.created_at
  %td.message= simple_format(comment.comment)
  %td.edit
    %ul.track-menu
      - if comment.user == current_user
        %li= link_to "", edit_admin_comment_path(comment), :title => t('edit comment'), :id => comment, :class => "edit"
        %li= link_to "", admin_comment_path(comment), :title => t('delete comment'), :confirm => t('a you sure?'), :method => :delete, :id => comment, :class => "destroy"
