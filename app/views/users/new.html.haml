%h1= title I18n.t("signup")
= semantic_form_for @user do |form|
  = form.inputs do
    %li
      = form.label :login,  :required => true
      = form.text_field :login, :required => true
      = form.errors_on(:login)
    %li
      = form.label :email,  :required => true
      = form.email_field :email, :required => true, :as => :email
      = form.errors_on(:email)
    %li
      = form.label :password,  :required => true
      = form.password_field :password, :required => true
      = form.errors_on(:password)
    %li
      = form.label :password_confirmation,  :required => true
      = form.password_field :password_confirmation, :required => true
      = form.errors_on(:password_confirmation)
    %li
      = form.label :icq
      = form.text_field :icq
      = form.errors_on(:icq)
    %li
      = form.label :webmoney_purse
      = form.text_field :webmoney_purse
      = form.errors_on(:webmoney_purse)
  = form.inputs do
    = recaptcha_tags
  = form.buttons :class => "register_button buttons" do
    = form.commit_button I18n.t("register"), :button_html => { :class => "buttons" }
