<div id="title">
  <%= @playlist.title %>
</div>
<div id="description">
  <%= @playlist.description %>
</div>
<div id="owner">
  <%= link_to @playlist.owner, @playlist.user %>
</div>
<div id="icon">
  <%= image_tag @playlist.icon.url(:thumb) %>
</div>

<ul class="catalog dotted">
	<li><%= link_to "mp3 треки", @playlist %></li>
</ul>
<div class="new-popular">
  <div class="corner-r"></div>
  <%= render :partial => "tracks/list", :locals => {:count_downloads => false, :paginate => true} %>
	<div class="corner-lb"><span></span></div>
</div>

<h2>Комментарии</h2>
<table id="comments">
  <tr>
    <th>Автор</th>
    <th>Название</th>
    <th>Комментарий</th>
  </tr>
  <% @comments.each_with_index do |comment, index| %>
    <%= render :partial => "comments/comment", :locals => {:comment => comment, :index => index} %>
  <% end %>
</table>


<h2>Добавить комментарий</h2>
<% semantic_form_for [:admin, @playlist.comments.build] do |f| %>
  <%= hidden_field_tag :switch, "playlist" %>
  <%= hidden_field_tag :object_id, @playlist.id %>
  <%= render :partial => 'admin/comments/form', :locals => {:f => f} %>
<% end %>

