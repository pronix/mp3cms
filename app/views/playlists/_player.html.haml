%form#form_tracks.edit_post{:action => "#", :method => "post"}
  .player-wr
    %p.current-track
    .player
      %a.play.play-tracks{:href => "#", :onclick => "play_pause(); return false;"}
      %span.timeline
        %span.timeline-act{:style => "width:0%;  margin-left: 7px; z-index: 1;" }
      #track_slider{ :style => "width:560px; margin-left: 25px; margin-top: 4px;" }
      %span{ :style => " margin-top: -15px; float: right;" }
        %a.clip.next-track{:href => "#", :onclick => "play_next_track(); return false;"}
        %a.clip2{:href => "#", :onclick => "random_play(); return false;"}
        %span.time
          %span#track_time 00:00
          %span &nbsp;-&nbsp;
          %span#time_end 00:00
  %div
    %table#tracks.mp3-list
      = render :partial => "track_player", :collection => @tracks, :locals => {:playlist_id => @playlist.id}
