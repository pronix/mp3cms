%tr{:class => cycle('orange', 'white'), :id => "track_#{index+1}"}
  %td.num
    = index+1
    \.
  %td{:id => "track_#{index+1}_author"}= link_to track.author, track
  %td{:id => "track_#{index+1}_title"}= track.title
  %td.size= mb(track.data_file_size)
  %td.time= track.duration
  %td.track-menu
  %td.small= link_to "", admin_listen_track_path(track), :class => "listen", :data_author => track.author, :data_title => track.title, :id => "#{index+1}_listen", :duration => track.length.to_i
  %td.small= link_to_remote "", :url => to_cart_admin_playlists_url(:track_ids => track.id) , :html => { :class => "add-to-cart" }
