%tr{:class => "#{cycle('orange', 'white')} track-el", "data-author" => track_player.author, "data-duration" => track_player.length.to_i, "data-href" => admin_listen_track_path(track_player), "data-title" => track_player.title, "data-track_id" => track_player.id, :id => "track_#{track_player_counter+1}"}
  %td.num
    = track_player_counter + 1
    \.
  %td{:id => "track_#{track_player_counter + 1}_author"}= link_to track_player.author, track_player
  %td{:id => "track_#{track_player_counter + 1}_title"}= track_player.title
  %td.size= number_to_human_size(track_player.data_file_size)
  %td.time= track_player.duration
  %td.small
    = check_box_tag "track_for_play_#{track_player_counter + 1}", track_player.id, false, |
      :class => "check_for_play",                                                         |
      :data_author => track_player.author,                                                |
      :data_title => track_player.title,                                                  |
      :duration => track_player.length.to_i,                                              |
      :href => admin_listen_track_path(track_player),                                     |
      :value => "#{track_player.id}",                                                     |
      :name => "track_ids[]"                                                              |
  %td.small
    = link_to "", admin_listen_track_path(track_player), |
      :class => "listen",                                |
      :data_author => track_player.author,               |
      :data_title => track_player.title,                 |
      :id => "#{track_player_counter + 1}_listen",       |
      :duration => track_player.length.to_i              |
  %td.small
    - if current_user && (current_user.admin? || @playlist.user == current_user )
