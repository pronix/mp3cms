!!!
%html
  %head
    = display_meta_tags :site => Settings.app_name.to_s + (params[:author] ? " #{params[:author]}" : ''), :description => 'mp3.', :keywords => 'mp3'
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = stylesheet_link_tag  'search', 'jquery-ui', 'will_paginate'
    = stylesheet_link_tag  'style', :media => "screen,projection"
    = stylesheet_link_tag  'nashe', :media => "screen,projection"
    = stylesheet_link_tag  "formtastic"

    = javascript_include_tag :defaults
    = javascript_include_tag 'search'
    = javascript_include_tag "http://api.recaptcha.net/js/recaptcha_ajax.js"
    = csrf_meta_tag
    = yield(:head)
    %link{:href => news_items_url(:format => :rss), :rel => "alternate", :title => "RSS", :type => "application/rss+xml"}/
  %body.homepage
    #ajax_indicator{:style => "display:none"}
      = I18n.t("please_wait_download_data")
      = image_tag "ajax-loader21.gif", :title => I18n.t("download_data")
    #wrapper
      .header
        %h1{:title => "Mp3Koza"}
          = Settings.app_name
          = link_to raw("<span></span>"),  root_url
        .user-menu-wr= render "shared/user_panel"
        .advertisment
          %p
            %a{:href => "#"}= image_tag "advertisment-iPod.jpg"
            %a{:href => "#"}= image_tag "advertisment-sms.jpg"
        .navigation= render "shared/navigation"
        .search-form
          = render "shared/search"
      .main.twocol-l
        = render :partial => "shared/notify_flash"
        .content-wrapper
          #content.content
            = yield
        - if current_user && current_user.admin?
          = render "shared/admin_menu"
        - else
          = render 'shared/left_block'
      .footer
        = render "shared/footer"
  - if current_user && !@tender_orders.blank? && params[:controller] != "orders"
    #dialog{:title => "У вас ответы в столе заказов"}
      %ul
        - @tender_orders.each do |order|
          %li= link_to "Ордер #{order.id}", order_path(order)
:javascript

  soundManager.useFlashBlock = false;
  soundManager.url = '/flash/';
  soundManager.debugMode = #{Rails.env !~ /production/ }
  soundManager.consoleOnly = true;

  $(document).ready(function(){

    function set_time_zone_offset() {
     var current_time = new Date();
     $.cookie('time_zone', current_time.getTimezoneOffset());
     };
    set_time_zone_offset()



  $("#dialog").find("a").live("click", function(){ $("#dialog").dialog( "close" ); });
  $("#dialog").dialog();
  });
