<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes' %>
    <%= javascript_include_tag  'jquery' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      <h1><%=h yield(:caption) %></h1>
<%= render :partial => 'templates/search_forms' %>
      <div>
        <%= link_to I18n.t("register"), signup_path %>
        <%= link_to I18n.t("login"), login_path %>
        <%= link_to I18n.t("logout"), logout_path %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>

