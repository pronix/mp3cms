<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags :site => Settings.app_name,
                          :description => 'mp3.',
                          :keywords => 'mp3' %>
	  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

    <%= stylesheet_link_tag  'search', 'jquery-ui', 'will_paginate' %>
    <%= stylesheet_link_tag  'style', :media => "screen,projection" %>
    <%= stylesheet_link_tag  'nashe', :media => "screen,projection" %>
    <%= stylesheet_link_tag  "formtastic", "formtastic_changes" %>

	  <!--[if lt IE 8]>
      <%= stylesheet_link_tag  'ie', :media => "screen,projection" %>
	  <![endif]-->


    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'search' %>
    <%= javascript_include_tag 'jquery.pulse' %>
    <%#= javascript_include_tag "soundmanager2" %>
    <%= javascript_include_tag "soundmanager2-nodebug-jsmin.js" %>


    <%= yield(:head) %>
    <link rel="alternate" type="application/rss+xml" title="RSS-канал" href="<%= news_items_url(:format => :rss) %>" />

  </head>
  <body class="homepage">

    <div id="ajax_indicator" style="display:none">
      <%= I18n.t("please_wait_download_data") %> ... <span id='req_count'></span><%= image_tag "ajax-loader21.gif", :title => I18n.t("download_data") %>
    </div>

    <div id="wrapper">
      <div class="header">
        <h1 title="Mp3Koza"><%= Settings.app_name %><%= link_to raw("<span></span>"),  root_url %></h1>
        <div class="user-menu-wr"><%= render "shared/user_panel" %></div>

        <div class="advertisment">
          <p>
            <a href="#"><%= image_tag "advertisment-iPod.jpg" %></a>
            <a href="#"><%= image_tag "advertisment-sms.jpg" %></a>
          </p>
        </div>

        <div class="navigation"><%= render "shared/navigation" %></div>

        <div class="search-form">
          <%= render "shared/search" %>
        </div>

      </div>

      <div class="main twocol-l">
        <% flash.each do |name, msg| %>
        <div class="<%= name %>"><div><p><%= msg %></p></div> </div>
        <% end %>

        <div class="content-wrapper">
          <div class="content" id="content">
            <%= yield %>
          </div>
        </div>

        <% if current_user && current_user.admin? %>
        <%= render "shared/admin_menu" %>
        <% else %>
        <%= render 'shared/left_block' %>
        <% end %>
      </div>


      <div class="footer">
        <%= render "shared/footer" %>
      </div>


    </div>

    <% if current_user && !@tender_orders.blank? && params[:controller] != "orders" %>
    <div id="dialog" title="У вас ответы в столе заказов">
      <ul>
        <% @tender_orders.each do |order| %>
        <li><%= link_to "Ордер #{order.id}", order_path(order)  %></li>
        <% end %>
      </ul>
    </div>

    <script type="text/javascript" charset="utf-8">
      $(document).ready(function(){
        $("#dialog").find("a").live("click", function(){ $("#dialog").dialog( "close" ); });
        $("#dialog").dialog();
      });
    </script>
   <% end %>

  </body>
</html>
