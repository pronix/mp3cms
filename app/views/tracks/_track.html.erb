<tr id="track_<%= index+1 %>"<%= cycle('', ' class="white"') %>>
  <td><%= index+1 %>.</td>
  <td id="track_<%= index+1 %>_author"><%= link_to track.author, track %></td>
  <td id="track_<%= index+1 %>_title"><%= link_to track.title, track %></td>
  <td><%= track.bitrate %> кб/с</td>
  <td><%= mb(track.data_file_size) %></td>
  <td><%= check_box_tag "track_ids[]", track.id, false, :id => "track_#{index+1}" %></td>
  <td><a href="#" class="listen"></a></td>
  <td><a href="#" class="buy"></a></td>
  <% if action_name == "top_mp3" %>
    <td id="track_<%= index+1 %>_count_downloads"><%= track.count_downloads %></td>
  <% end %>
  <% if current_user && current_user.tracks.include?(track) %>
    <td><%= link_to "", admin_track_path(track), :confirm => 'А вы уверены?', :method => :delete, :title => "Удалить трек", :id => "track_#{index+1}_delete", :class => "close" %></td>
  <% end %>
  <% if current_user && (current_user.tracks.include?(track) || current_user.admin?) %>
    <td><%= link_to(image_tag("edit.png"), edit_admin_track_path(track), :title => "Редактировать трек", :id => "track_#{index+1}_edit", :class => "edit js_link", :data_size => '350x400') %></td>
  <% end %>
</tr>

