<tr id="track_<%= index+1 %>">
  <td id="track_<%= index+1 %>_author"><%= track.author %></td>
  <td id="track_<%= index+1 %>_title"><%= link_to track.title, track %></td>
  <td><%= track.bitrate %></td>
  <td><%= mb(track.data_file_size) %></td>
  <td>
    <%= check_box_tag "track_ids[]", track.id %>
  </td>
  <td>
    <%= link_to "Удалить", admin_track_path(track, :playlist_id => @playlist.id), :confirm => 'А вы уверены?', :method => :delete, :id => "track_#{index+1}_delete" %>
  </td>
</tr>

