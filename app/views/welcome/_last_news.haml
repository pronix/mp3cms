%li.dotes
  %dl.n
    %dd.photo
      - if last_news.avatar_file_name
        = image_tag last_news.avatar.url(:original)
    %dt.title
      = link_to last_news.header, news_item_url(:id => last_news.id), :class => "title"
    %dd.descr
      = raw(truncate(last_news.description.to_s, :length => 450, :separator => '...'))
    %dd.more= link_to 'читать', news_item_url(last_news), :class => "more"
    %dd.autor
      %p.photo
        = link_to "#{last_news.newsimages.count} Фото", news_item_url(last_news)
      %p.comments
        = link_to "(#{last_news.comments_count})", news_item_url(last_news)

