  <script type="text/javascript">
      $(document).ready(function() {
       $('input:checkbox').click(function() {
          var buttonsChecked = $('input:checkbox:checked');
          if (buttonsChecked.length) {$('#to_playlist').removeAttr('disabled');$('#to_cart').removeAttr('disabled');}
          else {$('#to_playlist').attr('disabled', 'disabled');$('#to_cart').attr('disabled', 'disabled');}
          });
      });
  </script>
  <div id="result"></div>
  <% if current_user %>
    <button id="to_playlist" type="single_button">В плейлист</button>
  <% end %>
  <% form_for [:admin, :playlist], :url => {:controller => "admin/playlists", :action => :complete}, :html=> {:id => "track_form"} do |f| %>
    <% if current_user %>
      <%= submit_tag "В корзину", :name => "to_cart", :id => "to_cart" %>
      <div id="playlists" style="display:<%= RAILS_ENV=='test' ? 'inline' : 'none' %>;">
        <h2>Выбрать плейлист:</h2>
        <%= select nil, "playlist_id", current_user.playlists.all.collect {|p| [p.title, p.id]} %>
        <%= f.submit "OK", :id => "add_to_playlist" %>
      </div>
    <% end %>
     <% @tracks.each_with_index do |track, index| %>
       <tr id="track_<%= index+1 %>">
        <td id="track_<%= index+1 %>_author"><%= track.author %></td>
        <td id="track_<%= index+1 %>_title"><%= link_to track.title, track %></td>
        <td><%= track.bitrate %></td>
        <td><%= mb(track.data_file_size) %></td>
        <td>
          <%= check_box_tag "track_ids[]", track.id, false, :id => "track_#{index+1}" %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  <% end %>
  <%= will_paginate @tracks %>
</table>



