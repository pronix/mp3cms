<%= _title I18n.t("payments.title") %>
<ul class="catalog dotted">
	<li class="selected"><%= link_to I18n.t("payments.title"), payments_path %></li>
</ul>
<h1><%= I18n.t("payments.your_balance") %>: <%= number_to_currency current_user.balance %></h1>

<!-- Пополнение баланса -->
<div id="pay_place">
  <h4><%= I18n.t("payments.refill_balance") %></h4>
  <%= link_to "webmoney", webmoney_path, :class => "refill_balance" if Gateway.webmoney && Gateway.webmoney.active?  %>
  <%= link_to "mobilcents", mobilcents_path, :class => "refill_balance" if Gateway.mobilcents && Gateway.mobilcents.active?  %>
</div>

<!-- Заявка на вывод денег -->
<% if !current_user.webmoney_purse.blank? && current_user.can_withdraw? -%>
  <div id="withdraw_place">
    <%= link_to I18n.t("payments.withdraw"), new_withdraws_path, :id => "new_withdraw"   %>
  </div>
<% end -%>

<!-- Доходы -->
<h4><%= I18n.t("payments.credits") %></h4>
<table class="basic_table credits_table mp3-list">
  <%= render :partial => 'table', :object => @credits %>
</table>

<!-- Расходы -->
<h4><%= I18n.t("payments.debits") %></h4>
<hr />
<table class="basic_table debits_table mp3-list">
  <%= render :partial => 'table', :object => @debits %>
</table>

<hr />
<!-- Выплаты -->
<h4><%= I18n.t("payments.withdraws") %></h4>
<%= render :partial => 'withdraws', :object => @withdraws %>


<script type="text/javascript" charset="utf-8">
  $(function(){
    $(".refill_balance").click(function(){ $("#pay_place").load($(this).attr('href')+'.js'); return false; });
    $("#new_withdraw").click(function(){ $("#withdraw_place").load($(this).attr('href')+'.js'); return false; });
  });
</script>
<style type="text/css" media="screen">
  .refill_balance {
  height: 10px;
  border: 0.1em gray solid;
  text-decoration: none;
  padding: 1px 3px;
  }
</style>
