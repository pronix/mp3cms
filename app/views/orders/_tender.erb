<tr class="sub tender tender_<%= tender.order.id  %>" style="display:none;" >
  <td colspan="3">
    <div class="sub">
      <p class="autor">
        <a class="autor"><%= tender.user.try(:login) %></a>
        <%= l(tender.created_at, :format => :long)%>
      </p>
      <p class="comment">
        <%= tender.link.to_s.split.map{|x| x.mb_chars.length > 120 ? x.mb_chars.scan(/\w{120}/) : x.mb_chars }.join(' ') %>
      </p>
      <p class="number">â„– <a href="#" class="ready"><%= tender.id %></a>
        <% if tender.order.user.id == current_user.id && tender.order.notfound?  %>
        <%= link_to "", close_not_found_order_order_url(tender), :class => "ok-btn", :id => "close_not_found_order" %>
      </p>
      <%  end %>
    </div>
  </td>
</tr>
