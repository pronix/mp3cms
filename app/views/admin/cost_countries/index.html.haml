%h1= title I18n.t("admin.countries.title")
= link_to I18n.t("admin.countries.back_to_gateway"), parent_url
= link_to I18n.t("admin.countries.add_country"),   new_resource_url
%table.basic_table.cost_countries_table.mp3-list
  %tr
    %td= I18n.t("admin.countries.country")
    %td= I18n.t("admin.countries.cost")
    %td
  - for cost_country in @cost_countries
    %tr
      %td= cost_country.country
      %td= number_to_currency cost_country.cost
      %td
        = link_to I18n.t("edit"), edit_resource_path(cost_country)
        = link_to I18n.t("delete"), resource_path(cost_country), :method => :delete, :confirm => "Delete country"
