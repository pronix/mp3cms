%tr
  %td= track.id
  %td{:id => "track_#{index+1}_author"}= link_to track.author, edit_admin_track_path(track), :id => "track_edit", :class => "js_link"
  %td{:id => "track_#{index+1}_title"}= link_to track.title, edit_admin_track_path(track), :id => "track_edit", :class => "js_link"
  %td= I18n.t("tracks.states.#{track.state}")
  %td= link_to track.owner, track.user, :class=>"js_link"
  %td= number_to_human_size track.data_file_size
  %td
    = track.bitrate
    кб/с
  %td{:id => "track_#{index+1}"}
    = check_box_tag "track_ids[]", track.id
