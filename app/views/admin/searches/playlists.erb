<% content_for :title do %>
<%= @title %>
<% end -%>

<h1>Admin::Search playlists</h1>
<% form_tag '/admin/searches/playlists', :method => :get do -%>
  <p>Title: <%= radio_button_tag("attribute", "title", checked = true)  %>
     ID: <%= radio_button_tag("attribute", "id")  %>
     User login: <%= radio_button_tag("attribute", "id")  %>
            Инпут поиска: <%= text_field_tag("search_string") %></p>
  <p><%= submit_tag "Найти" %></p>
<% end -%>

<% unless @rez_search.nil? or @rez_search.empty? -%>
  <table border="1">
    <%= render :partial => 'block_playlist', :collection => @rez_search %>
  </table>
<% else -%>
  <%= @title %>
<% end %>

