<h1><%= I18n.t("admin.search.news.title") %></h1>

<div id="form_news_item">
<%= form_tag admin_searches_path, :method => :get do -%>
<ul class="list_inline">
  <li><%= I18n.t("admin.search.news.all_field") %>: <%= radio_button_tag("attribute", "everywhere", checked = true)  %></li>
  <li>ID: <%= radio_button_tag("attribute", "id")  %></li>
</ul>

<%= hidden_field_tag("model", "news_item") %>

  <div>
	  <fieldset class="search-string">
		  <div>
			  <div class="input"><%= text_field_tag "q", params[:q]  %></div>
        <%= submit_tag "", :class => "search", :title => "Найти", :id => "search_news" %>
		  </div>
	  </fieldset>
  </div>
<% end -%>
</div>

