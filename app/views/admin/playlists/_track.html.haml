%tr{:class => cycle('orange', 'white'), :id => "#{dom_id(track)}"}
  %td.num= "#{track_counter + 1}."
  %td= link_to track.author, track
  %td= track.title
  %td.size= number_to_human_size(track.data_file_size)
  %td.time= track.duration
  %td.small
    = check_box_tag "track_ids[]", track.id, false, :class => "check_for_play", :id => nil, |
      :data_author => track.author,            |
      :data_title => track.title,              |
      :duration => track.length.to_i,          |
      :href => admin_listen_track_path(track), |
      :value => "#{track.id}"                  |

  %td.small
    = link_to "", admin_listen_track_path(track), :class => "listen", :id => nil, |
      :data_author => track.author,     |
      :data_title => track.title,       |
      :data_track_id => track.id,       |
      :duration => track.length.to_i    |

  %td.small
    - if current_user && (current_user.admin? || @playlist.user == current_user )
      = link_to "", delete_from_playlist_url(:id => track.id, :playlist_id => @playlist.id), |
        :class => "delete", :title => t("delete_this_track_from_playlist")                  |
