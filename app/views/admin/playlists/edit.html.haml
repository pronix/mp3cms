%ul.catalog.dotted
  %li.selected= link_to "Редактировать плейлист", edit_admin_playlist_path
%ul.all-list.dotted
  %li.prev
    - unless @prev_playlist.blank?
      = link_to "Предыдущий", edit_admin_playlist_path(@prev_playlist)
    - else
      %span.disabled Предыдущий
  %li.next
    - unless @next_playlist.blank?
      = link_to "Следующий", edit_admin_playlist_path(@next_playlist)
    - else
      %span.disabled Следующий
  %li.delete-playlist
    = link_to "Удалить", admin_playlist_path(@playlist), :confirm => 'А вы уверены?', |
      :method => :delete, :id => "playlist_delete"                                                     |
= form_for [:admin, @playlist], :html => { :class => "new-playlist", :multipart => true } do |f|
  %fieldset
    = error_messages!(@playlist)
    = render :partial => "form", :locals => {:f => f}
    .buttons
      = f.submit "сохранить", :class => "buttons"
      = link_to "отменить", admin_playlist_path(@playlist), :class => "cancel"
%script{:charset => "utf-8", :type => "text/javascript"}
  $(document).ready(function() {
  $(".delete").click(function(){
  $.ajax({
  "url": $(this).attr("href")+".js",
  "type": "DELETE"
  });
  return false;
  });
  $(".up").click(function(){
  $.ajax({
  "url": $(this).attr("href")+".js",
  "type": "POST"
  });
  return false;
  $("#mytracks").html('')
  });
  $(".down").click(function(){
  $.ajax({
  "url": $(this).attr("href")+".js",
  "type": "POST"
  });
  return false;
  $("#mytracks").html('')
  });
  });
#mytracks
  = render :partial => "admin/tracks/row"
