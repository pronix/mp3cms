%h1= title I18n.t("admin.pages.title")
%div= link_to I18n.t("admin.pages.new_page"), new_resource_path
%table.basic_table.pages_table.mp3-list
  %tr
    %th= I18n.t('id')
    %th= I18n.t('admin.pages.name')
    %th= I18n.t('admin.pages.permalink')
    %th= I18n.t("actions")
  - @pages.each do |page|
    %tr
      %td= page.id
      %td= link_to page.name, resource_path(page.id)
      %td= link_to page.permalink, stat_url(page.permalink)
      %td
        = link_to I18n.t("edit"), edit_admin_page_path(page.id)
        = link_to I18n.t("delete"), admin_page_url(page.id), :method => :delete, :confirm => "Вы действительно хотите удалить страницу?"
