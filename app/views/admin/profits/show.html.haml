- title I18n.t("profits")
%ul.catalog.dotted
  %li.selected= link_to "Баланс", admin_profits_path
  %li= link_to I18n.t("edit"), edit_admin_profits_path
%table.basic_table.profits_table.mp3-list
  %tr
    %th= I18n.t("actions")
    %th= I18n.t("admin.profits.cost")
  - @profits.each do |pr|
    %tr{:class => cycle( 'white', '')}
      %td= pr.name
      %td
        - if pr.percentage?
          = number_to_percentage pr.cost, :precision => 2
        - else
          = number_to_currency pr.cost
