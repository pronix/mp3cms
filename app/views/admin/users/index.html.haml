- title I18n.t("admin.users.title")
%ul.catalog.dotted
  %li.selected= link_to I18n.t("admin.users.title"), collection_path
  %li= link_to I18n.t("admin.users.new_user"), new_resource_path
%table.basic_table.users_table.mp3-list
  %tr
    %td= I18n.t("id")
    %td= I18n.t("admin.users.head_login")
    %td= I18n.t("email")
    %td= I18n.t("admin.users.balance")
    %td= I18n.t("admin.users.add_files")
    %td= I18n.t("admin.users.download_files")
    %td= I18n.t("admin.users.role")
    %td= I18n.t("actions")
  - @users.each do |user|
    %tr
      %td= user.id
      %td= link_to user.login, admin_user_path(user)
      %td= user.email
      %td= number_to_currency user.balance
      %td= user.tracks.count
      %td= user.transactions.download_track.size
      %td= user.roles.first.title
      %td
        = link_to I18n.t("edit"), edit_admin_user_path(user), :id => "edit_#{user.id}"
        = link_to I18n.t("delete"),  admin_user_path(user), :method => :delete , :confirm =>  I18n.t("delete_user?"), :title => I18n.t("delete_user"), :id => "delete_#{user.id}"
        = link_to I18n.t("block"), block_admin_user_path(user), :id => "block_#{user.id}" if permitted_to?(:block) && !user.ban?
        = link_to I18n.t("unblock"), unblock_admin_user_path(user), :confirm => I18n.t("unblock_user?"), :id => "unblock_#{user.id}" if permitted_to?(:unblock) && user.ban?
