%td
  %ul
    %li
      Пользователь:
      %i= tender.user.try(:login)
    %li
      Дата:
      %i= l(tender.created_at, :format => :long)
    %li
      Статус:
      %i= tender.tender_state
%td
  %p.comment
    = tender.link.to_s.split.map{|x| x.mb_chars.length > 120 ? x.mb_chars.scan(/\w{120}/) : x.mb_chars }.join(' ')
%td
  - if tender.tender_state.to_s == "moderation"
    %ul
      %li= link_to "Одобрить", accept_admin_order_tender_path(order, tender)
      %li= link_to "Отменить", deny_admin_order_tender_path(order, tender)
