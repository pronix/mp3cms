%ul.catalog.dotted
  %li.selected
    = link_to "Заказ №#{@order.id}", admin_order_path(@order)
%table.orders
  %tr
    %td
      %ul
        %li
          Пользователь:
          %i= @order.user.try(:login)
        %li
          Дата:
          %i= l(@order.created_at.in_time_zone, :format => :long)
    %td
      %ul
        %li
          Испонитель:
          %i= @order.author
        %li
          Название:
          %i= @order.title
        %li
          Музыка:
          %i= @order.music
        %li
          Язык:
          %i= @order.language
        %li
          Пол:
          %i= @order.floor
  %tr
    %td{:colspan => "3"}
      Дополнительная информация:
      %br
      %i
        = truncate(@order.more.to_s, :length => 400, :separator => '...')
  - @order.tenders.each do |t|
    %tr.sub.tender
      = render :partial => "tender", :object => t, :locals => {:order => @order }
